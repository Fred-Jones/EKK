//- The DOM is organized into page with class='page'
//- Each page fills the entire screen
//- For each page there is only one .inner element
//- .box elements should be added to the .inner element
extends layout
block css
  //- link(href='https://fonts.googleapis.com/css?family=Slabo+27px' rel='stylesheet' type='text/css')
block content
  include ./modals/signup_modal
  include ./modals/login_modal
  .page#pageOne
    .inner
      a.font.thick(id='enter' href='atrium')
        for l in 'ENTER'
          div(style='display: inline-block; margin: .5em;') #{l}
      button.btn.font.skinny.col-sm-6(id='login' type='button' href='#' data-toggle='modal' data-target='#loginmodal' style='margin: 15px')
        for m in 'Login'
          div(style='display: inline-block; margin: .1em;') #{m}
      button.btn.font.skinny.col-sm-6(id='signup' type='button' href='#' data-toggle='modal' data-target='#signupmodal' style='margin: 15px')
        for n in 'Signup'
          div(style='display: inline-block; margin: .1em;') #{n}
    .three#THREE
  .footer
    .inner
      div Some Text 
  //- socket implementation in index.js
  //- AKA BlizWow class
